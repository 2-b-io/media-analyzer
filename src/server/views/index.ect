<!doctype html>
<html>
  <head>
    <style>
      * {
        padding: 0;
        margin: 0;
        font-family: Lucida Sans Typewriter,Lucida Console,monaco,Bitstream Vera Sans Mono,monospace;
      }

      html {
        box-sizing: border-box;
      }
      *, *:before, *:after {
        box-sizing: inherit;
      }

      .form {
        margin-top: 50px;
        margin-right: auto;
        margin-left: auto;
        border: 1px solid #666;
        width: 300px;
        padding: 10px;
        font-size: 12px;
      }

      .row {
        margin-bottom: 5px;
      }

      input[type="text"] {
        width: 100%;
      }

      input, button {
        height: 30px;
        padding: 5px;
      }

      .checkbox {
        display: flex;
        align-items: center;
      }

      .checkbox span {
        margin-left: 10px;
      }
    </style>
  </head>
  <body>
    <form method="get" action="/analyze" class="form">
      <div class="row">
        <input type="text" name="url" placeholder="URL">
      </div>
      <div class="row">
        <input type="text" name="delay" placeholder="Delay (optional)">
      </div>
      <div class="row">
        <label class="checkbox">
          <input type="checkbox" name="m">
          <span>Mobile</span>
        </label>
      </div>
      <button type="submit">Analyze</button>
    </form>
  </body>
</html>
