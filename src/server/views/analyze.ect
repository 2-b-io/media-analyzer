<!doctype html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      * {
        padding: 0;
        margin: 0;
        font-family: Lucida Sans Typewriter,Lucida Console,monaco,Bitstream Vera Sans Mono,monospace;
        font-size: 12px;
      }

      html {
        box-sizing: border-box;
      }
      *, *:before, *:after {
        box-sizing: inherit;
      }
      table {
        border-collapse: collapse;
        width: 100%;
      }

      table td, table th {
        border: 1px solid #666;
        padding: 10px;
        text-align: center;
        font-size: 12px;
      }

      tr.highlighted {
        background: #ccc;
      }

      td.highlighted {
        font-weight: bold;
      }

      .wrapper {
        display: flex;
        width: 100%;
        flex-wrap: wrap;
        top: 40px;
        position: relative;
      }

      .col {
        padding: 10px;
        flex-grow: 1;
        flex-basis: 0;
        flex-shrink: 1;
        flex: 1 1 0;
      }

      img {
        max-width: 100%;
      }

      .nowrap {
        white-space: nowrap;
      }

      .nowrap a {
        text-decoration: none;
      }

      .trim {
        max-width: 200px;
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
      }
      .trim.double {
        max-width: 400px;
        margin: 0 auto;
      }

      .header {
        background: black;
        color: white;
        line-height: 20px;
        padding: 10px;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1;
      }

      .header a {
        color: inherit;
      }
    </style>
    <script>
    <!--
      var RESOURCES = <%- JSON.stringify(@resources) %>;
      var IMAGES = <%- JSON.stringify(@imgs) %>;
    -->
    </script>
  </head>
  <body>
    <div class="header">
      <a href="/">Back</a>
    </div>
    <div class="wrapper">
      <div class="col">
        <table>
          <thead>
            <tr>
              <th colspan="7">
                <div class="trim double">
                  <a href="<%= @url %>"><%= @url %></a>
                </div>
              </th>
            </tr>
            <tr>
              <th colspan="2">
                <span>Images</span>
              </th>
              <th>
                <span>Natural</span>
              </th>
              <th>
                <span>Displayed</span>
              </th>
              <th>
                <span>Size</span>
              </th>
              <th>
                <span>Optimized</span>
              </th>
              <th>
                <span>%</span>
              </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td colspan="4">
                <strong>Total</strong>
              </td>
              <td>
                <span><%= @prettyTotalSize %></span>
              </td>
              <td>
                <span><%= @prettyTotalOptimizedSize %></span>
              </td>
              <td class="<%= (@percent < 100) && 'highlighted' || '' %>">
                <%= (@percent - 100).toFixed(1) %>%
              </td>
            </tr>
            <% for img, index in @imgs : %>
              <tr class="<%= img.canOptimized && 'highlighted' %>">
                <td>
                  <span><%= index + 1 %></span>
                </td>
                <td>
                  <div class="trim">
                    <a href="<%= img.url %>" target="_blank"><%= img.url %></a>
                  </div>
                </td>
                <% if img.imgTag : %>
                  <td class="nowrap">
                    <%= img.imgTag.natural.width %> x <%= img.imgTag.natural.height %>
                  </td>
                  <td class="nowrap">
                    <%= img.imgTag.displayed.width %> x <%= img.imgTag.displayed.height %>
                  </td>
                <% else : %>
                  <td class="nowrap" colspan="2">
                    <span>CSS Background</span>
                  </td>
                <% end %>
                <td class="nowrap">
                  <a href="<%= img.url %>" target="_blank"><%= img.prettySize %></a>
                </td>
                <td class="nowrap">
                  <a href="<%= img.optimizedPath %>" target="_blank"><%= img.prettyOptimizedSize %></a>
                </td>
                <td class="nowrap <%= (img.percent < 100) && 'highlighted' || '' %>">
                  <%= (img.percent - 100).toFixed(1) %>%
                </td>
              </tr>
            <% end %>
            <tr>
              <td colspan="4">
                <strong>Total</strong>
              </td>
              <td>
                <span><%= @prettyTotalSize %></span>
              </td>
              <td>
                <span><%= @prettyTotalOptimizedSize %></span>
              </td>
              <td class="<%= (@percent < 100) && 'highlighted' || '' %>">
                <%= (@percent - 100).toFixed(1) %>%
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col">
        <a href="<%= @screenshot %>" target="_blank">
          <img src="<%= @screenshot %>">
        </a>
      </div>
    </div>
  </body>
</html>
