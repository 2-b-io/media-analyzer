@require '~elements/side-bar-index'

body
  background-color: $color__gallery

  @media screen and (max-width: 1152px)
    display: inline-block

.wrapper
  & > .content
    width: 1152px
    padding: 48px 8px 24px
    margin: auto

    &.small
      width: 960px

    &.x-small
      width: 640px

img
   max-width: 100%

   &.full-width
     width: 100%

.document
  transform: translateX(256px)
  margin-left: 40px
  max-width: 1600px
  min-width: 1150px
  overflow: hidden

  .document-content-title
    text-align: center
    font-weight: 500
    font-size: $font-size__h3
    padding: 24px
