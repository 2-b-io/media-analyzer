body
  background-color: $color__gallery

  @media screen and (max-width: 1152px)
    display: inline-block

  @media screen and (max-width: 600px)
    max-width: 600px
    min-width: 320px

.wrapper
  & > .content
    width: 1152px
    padding: 48px 8px 24px
    margin: auto

    @media screen and (max-width: 600px)
      max-width: 600px
      min-width: 320px

    &.small
      width: 960px

      .logo
        max-width: 250px
        margin: auto
    &.x-small
      width: 640px

img
   max-width: 100%

   &.full-width
     width: 100%
