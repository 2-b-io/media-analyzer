body
  background-color: $color__gallery

  @media screen and (max-width: 1152px)
    display: inline-block

.wrapper
  & > .content
    width: 1152px
    padding: 48px 8px 24px
    margin: auto

    &.small
      width: 960px

    &.x-small
      width: 640px

img
   max-width: 100%

   &.full-width
     width: 100%



table {
  border-collapse: collapse
  width: 100%
}

  th, td
    padding: 4px
    text-align: left
    border-bottom: 1px solid #ddd
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
  tr
    height: 16px
  .name
    max-width: 350px
  .status
    max-width: 100px
  .graph
    width: 100%
tr:hover
  background-color:#f5f5f5

.table-report-detail
    padding: 48px 48px 24px
    margin: auto

.stacked-bar-graph
  width: 100%
  height: 16px
  color:#414042

  span
    display: inline-block
    height:100%
    box-sizing: border-box
    float: left

  .bar-blank
    background: transparent

  .bar-block
    background: #E4D5C1

  .bar-dns
    background: #71BEC9

  .bar-connect
    background: #AFDE67

  .bar-send
    background: #E1AA9D

  .bar-wait
    background: #A294BB

  .bar-receive
    background: #C0C0C0
