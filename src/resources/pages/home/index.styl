* {
  padding: 0
  margin: 0
  color: inherit
  font-family: inherit
}

html
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

body
  font-family: Lucida Sans Typewriter,Lucida Console,monaco,Bitstream Vera Sans Mono,monospace
  font-size: 12px

.navbar
  appearance: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #07f
  color: white;
  box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12);

.navbar-container {
  padding: 16px;
  font-size: 14px;
  font-weight: bold;
}
.center-form
  max-width: 640px
  margin: auto;
  padding-top: 256px

  form
    display: grid
    grid-template-columns: 1fr 128px
    grid-gap: 8px

    .analyze-input
      height: 40px
      padding: 8px

    .analyze-button
      border: none
      background: #07f
      color: white
      cursor: pointer

      &:hover
        transition: opacity .3s
        opacity: 0.8

  .description
    padding: 8px
    line-height: 24px
    text-align: center
