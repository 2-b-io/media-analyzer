@require '~style/base'
@require '~elements/header'
@require '~elements/contact-form'
@require '~elements/footer'

.wrapper-content
  max-width: 950px
  margin: auto
  margin-top: 30px

  .introduction
    display: grid
    grid-template-columns: 2fr 2fr
    grid-gap: 24px
    color: #6c6c6c

    .title-content
      font-weight: 500
      font-size: 14px
      color: #111111

.contact-form
  background-color: white

.notify-contact
  font-weight: 500
  font-size: 14px
  color: #111111
  text-align: center
