@require '~style/base'
@require '~style/layout'
@require '~elements/contact-form'
@require '~elements/footer'
@require '~elements/header'
@require '~elements/report-tab'

.wrapper
  max-width: 1920px
  min-width: 1150px
  margin: auto

table
  border-collapse: collapse
  width: 100%

  td
    padding: 16px
    text-align: left
    white-space: nowrap
  tr
    height: 16px

  tr:nth-child(even)
    background-color: #dadada

  th
    background-color: #9e9e9e
    padding: 8px
    overflow: hidden
    text-align: left

    &.optimized-timing
      background-color: $color__cornflower-blue
      color: white
      font-size: $font-size__h4

  .status
    max-width: 70px

  .content-type
    max-width: 70px

  .graph
    min-width: 500px
    max-width: 500px
    padding-right: 48px
    position: relative
    overflow: unset

tr:hover
  background-color:#f5f5f5

.report-detail
    padding: 48px 48px 24px
    margin: auto

.report-detail-show
  display: block

.report-detail-hidden
  display: none

.report-detail-title
  text-align: center
  padding-top: 32px
  font-size: $font-size__h2
  font-weight: 500

.stacked-bar-graph
  position: relative
  top: 4px
  padding-right: 4px
  width: 100%
  height: 16px
  color:#414042

  span
    display: inline-block
    height:100%
    box-sizing: border-box
    float: left

  .bar-blank
    background: transparent

  .bar-block
    background: #E4D5C1

  .bar-dns
    background: #71BEC9

  .bar-connect
    background: #AFDE67

  .bar-send
    background: #E1AA9D

  .bar-wait
    background: #A294BB

  .bar-receive
    background: #C0C0C0

.total-time
  right: 4px
  width: 48px
  top: 16px
  position: absolute

  &.optimized
    color: $color__cornflower-blue
.bar-description::before
  content: ''
  width: 16px
  border-radius: 4px
  height: 8px
  display: inline-block
  margin: 0px 8px

.bar-description.block::before
  background-color: #E4D5C1

.bar-description.dns::before
  background-color: #71BEC9

.bar-description.connect::before
  background-color: #AFDE67

.bar-description.send::before
  background-color: #E1AA9D

.bar-description.wait::before
  background-color: #A294BB

.bar-description.receive::before
  background-color: #C0C0C0

.description-report-detail
  text-align: center
  color: $color__cornflower-blue

.fileName
  position: relative
  max-width: 250px
  overflow: hidden
  text-overflow: ellipsis
  z-index: 10
  a
    white-space: nowrap
    padding-right: 24px
    color: $text-color__primary

.fileName::after
  content: attr(data-filetype)
  position: absolute
  right: 10px
  top: 8px

.fileName:hover
  width: auto
  overflow: inherit

  a
    color: white
    background: $color__dove-gray
