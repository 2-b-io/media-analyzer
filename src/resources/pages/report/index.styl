*
  padding: 0
  margin: 0
  color: inherit
  font-size: inherit

html
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

body
  font-family: Lucida Sans Typewriter,Lucida Console,monaco,Bitstream Vera Sans Mono,monospace
  font-size: 12px
  line-height: 24px
  background-color: #ebebeb

.navbar
  appearance: none
  overflow: hidden
  background-color: #1268b3
  color: white
  text-align: center

.navbar-content {
  padding: 16px;
  font-size: 14px;
  font-weight: bold;
}

.loading-icon
  margin: 0 auto
  text-align: center

.navbar-tab {
  font-size: 14px;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  padding: 5px;
  cursor: pointer;
}

.navbar-tab-active {
  font-weight: bold;
  border-bottom-color: white;
  border-bottom-style: solid;
  border-bottom-width: 2px;
}

.report
  display: grid
  grid-template-columns: 1fr 1fr
  grid-gap: 16px
  padding: 16px
  background-color: white

  & > *
    min-width: 0
    min-height: 0

  .metric-title
    text-align: center
    padding: 8px
    font-size: 14px

  .metric
    width: 100%
    table-layout: fixed
    border-collapse: collapse

    td, th
      border-bottom: 1px solid #ebebeb
      padding: 8px

  .td-metric-value
    text-align: right;

  .screenshot
    padding-top: 16px

    img
      max-width: 100%

.progress-message
  padding: 8px
  text-align: center

.flex-wrapper {
  display: flex;
  flex-flow: row nowrap;
}

.single-chart {
  width: 33%;
  justify-content: space-around ;
}

.circular-chart {
  display: block;
  margin: 10px auto;
  max-width: 80%;
  max-height: 170px;
}

.circle-bg {
  fill: none;
  stroke: #eee;
  stroke-width: 2.5;
}

.circle {
  fill: none;
  stroke-width: 2.4;
  stroke-linecap: round;
  animation: progress 1s ease-out forwards;
}

@keyframes progress {
  0% {
    stroke-dasharray: 0 100;
  }
}

.circular-chart.orange .circle {
  stroke: #ff9f00;
}

.circular-chart.green .circle {
  stroke: #4CC790;
}

.circular-chart.blue .circle {
  stroke: #3c9ee5;
}

.percentage {
  fill: #ff9f00;
  font-family: sans-serif;
  font-size: 0.5em;
  text-anchor: middle;
}
