*
  padding: 0
  margin: 0
  color: inherit
  font-size: inherit

html
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

body
  font-family: Lucida Sans Typewriter,Lucida Console,monaco,Bitstream Vera Sans Mono,monospace
  font-size: 12px
  line-height: 24px

.navbar
  appearance: none
  overflow: hidden
  background-color: #07f
  color: white
  text-align: center

.navbar-content {
  padding: 16px;
  font-size: 14px;
  font-weight: bold;
}

.loading-icon
  margin: 0 auto
  text-align: center

.report
  display: grid
  grid-template-columns: 1fr 1fr
  grid-gap: 16px
  padding: 16px

  & > *
    min-width: 0
    min-height: 0

  .metric-title
    text-align: center
    padding: 8px
    font-size: 14px

  .metric
    width: 100%
    table-layout: fixed
    border-collapse: collapse

    td, th
      border: 1px solid #07f
      padding: 8px

  .screenshot
    padding-top: 16px

    img
      max-width: 100%

.progress-message
  padding: 8px
  text-align: center
