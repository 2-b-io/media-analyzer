@require '~style/base'
@require '~elements/circle-chart'
@require '~elements/contact-form'
@require '~elements/footer'
@require '~elements/header'
@require '~elements/report-tab'
@require '~elements/table-report'
@require '~elements/progress-bar'

.report
  max-width: 1150px
  display: grid
  grid-template-columns: 1fr 1fr
  grid-gap: 16px
  margin: auto
  padding-top: 100px

.table-report
  position: relative
  background-color: #fff
  max-width: 600px
  min-width: 550px
  min-height: 350px
  border-radius: 16px

  .title-report
    font-size: 24px
    font-weight: 500
    color: #6c6c6c
    padding-top: 100px
    text-align: center
    padding-bottom: 80px

  .score-report
    font-size: 26px
    position: absolute
    top: 0px
    left: 50%
    transform: translate(-50%, -50%)
    text-align: center

  .info-report
    display: grid
    grid-template-columns: 1fr 1fr
    grid-gap: 32px
#report-desktop
  display: none

.summary-domain
  max-width: 360px
  margin: auto

  .audited-url
    text-align: center
    text-transform: uppercase
    font-size: 18px
    padding-bottom: 20px
    color: #1268b3
    font-weight: 500

  .summary-message
    color: #6c6c6c
  .gauge-scale
    color: #6c6c6c
    .range::before
      content: ''
      width: 16px;
      height: 8px
      border-radius: 4px
      display: inline-block
      margin: 0px 8px

    .range.fast::before
     background-color: #178239

    .range.average::before
     background-color: #e67700

    .range.slow::before
     background-color: #c7221f

.progress-description
  font-size: 18px
  margin-bottom: 5px
  left: 50%
  transform: translate3d(-50%, 50%, 0)
  max-width: 550px
  position: relative
  top: -20px
