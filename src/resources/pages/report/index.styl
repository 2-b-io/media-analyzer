*
  padding: 0
  margin: 0
  color: inherit
  font-size: inherit

body
  font-family: Lucida Sans Typewriter,Lucida Console,monaco,Bitstream Vera Sans Mono,monospace
  font-size: 12px

.navbar {
  appearance: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #07f
  height: 50px;
  color: white;
  z-index: 1;
  box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12);
}
.navbar-left-content {
  padding: 15px;
  font-size: 16px;
  font-weight: bold;
}
.navbar-center-content {
  padding: 15px;
  position: relative;
  font-size: 16px;
  font-weight: bold;
  text-align: center;
}

.loading-icon
  margin: 0 auto
  text-align: center

.report
  display: grid
  grid-template-columns: 1fr 1fr
  grid-gap: 16px
  padding: 16px

  & > *
    min-width: 0
    min-height: 0

  .metric-title
    text-align: center
    padding: 8px
    font-size: 14px

  .metric
    width: 100%
    table-layout: fixed
    border-collapse: collapse

    td, th
      border: 1px solid #07f
      padding: 8px

  .screenshot
    padding-top: 16px

    img
      max-width: 100%

.progress-message
  padding: 8px
  text-align: center
