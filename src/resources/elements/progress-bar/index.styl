@keyframes spin
  0&
    opacity: 1
  50%
    opacity: 0.2
  100%
    opacity: 1

.progress-bar
  overflow: hidden
  border-radius: 16px

  .bar
    display: block
    position: relative
    height: 16px
    background: $color__white

    .progress
      position: absolute
      top: 0
      left: 0
      bottom: 0
      background: $color__denium
      width: 0%
      border-radius: 10px
      min-width: 16px
      transition: width .2s

.steps
  padding: 16px 64px

  .step
    display: flex

    .content
      flex-grow: 1

    .status
      display: none
      flex-basis: 24px
      flex-grow: 0
      flex-shrink: 0
      text-align: center
      font-size: 16px

      &.spinned
        animation: spin 8s linear infinite

      &.processing
        display: block

.reload-manual
  text-align: center
