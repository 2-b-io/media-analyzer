.progress-bar
  overflow: hidden
  border-radius: 16px

  .bar
    display: block
    position: relative
    height: 16px
    background: $color__white

    .progress
      position: absolute
      top: 0
      left: 0
      bottom: 0
      background: $color__denium
      width: 0%
      border-radius: 10px
      min-width: 16px
      transition: width .2s
