.wrapper-contact-form
  background-color: $color__white
  border-bottom-color: $color__dove-gray
  border-bottom-style: solid
  border-bottom-width: thin
  min-width: 1150px
  .content-form
    max-width: 960px
    margin: auto
    margin-top: 32px

    .title-form
      color: $color__denium
      font-size: 18px
      font-weight: 500
      padding-top: 48px
      padding-bottom: 16px

    .contact-form
      padding-top: 24px
      padding-bottom: 24px
      text-align: center

      .groups-input-form
        display: grid
        grid-template-columns: 2fr 2fr
        grid-gap: 24px
        padding-bottom: 24px

.input-line
  width: 100%
  background: none
  border: none
  border-bottom: 1px solid $color__gallery
  display: block
  appearance: none
  border-radius: 0
  outline: none
  line-height: 24px
  padding: 8px 0
  overflow: hidden

  &::placeholder
    color: $color__cod-gray

  &:focus
    border-bottom: 1px solid $color__cornflower-blue
    transition: border .3s

  &.multi-line
    resize: none
    overflow: hidden

.send-button
  border: none
  width: 96px
  background: $color__catalina-blue
  color: $color__white
  cursor: pointer
  border-radius: 32px
  height: 32px
  appearance: none
  outline: none
