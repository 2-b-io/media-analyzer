@require '~style/base'
@require '~style/typo'

.pagination
  display: inline-block
  padding: 16px

  a
    color: black
    padding: 8px 16px
    text-decoration: none
    transition: background-color .3s
    border: 1px solid #ddd

    &.active
      background-color: $color__catalina-blue
      color: white
      border: 1px solid $color__catalina-blue

    &:hover:not(.active)
      background-color: #ddd
