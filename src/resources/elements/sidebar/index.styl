@require '~style/base'

.surface
  position: absolute
  overflow: hidden
  top: 0
  bottom: 0
  left: 0
  background: $color__denium
  color: white
  z-index: 1
  width: 280px

  .menu
    min-width: 0px

    .menu-sidebar-item
      display: grid
      grid-template-columns: 100%
      :hover
        background: $color__catalina-blue
      li
        display: grid
        grid-template-columns: min-content 1fr
        font-size: 14px
        line-height: 40px
        padding-right: 8px
        cursor: pointer
        .sidebar-item-icon
          display: flex
          width: 40px
          height: 40px
          max-width: 100%
          max-height: 100%
