@require '~style/base'

.navbar
  appearance: none
  overflow: hidden
  background-color: $color__cornflower-blue
  color: $color__white
  text-align: center

  form
    display: grid
    grid-template-columns: 1fr 128px
    grid-gap: 8px

    .analyze-input
      padding: 8px 16px
      appearance: none
      outline: none
      border-radius: 40px
      border: none
      color: $color__cod-gray

    .analyze-button
      border: none
      background: #074071
      color: $color__white
      cursor: pointer
      border-radius: 40px
      appearance: none
      outline: none

      &:hover
        transition: opacity .3s
        opacity: 0.8

  .description
    padding: 8px
    line-height: 24px
    text-align: center

  .title
    text-transform: uppercase
    font-size: 24px
    margin-top: 30px
    display: flex
    margin-bottom: 35px
    justify-content: center
    font-weight: 500
