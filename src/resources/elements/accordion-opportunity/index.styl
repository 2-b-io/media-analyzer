@require '~style/base'

.accordion-opportunity
  padding: 16px

  .transition, span, ul li i:before, ul li i:after {
    transition: all 0.25s ease-in-out
  }

  .flipIn, h1, ul li {
    animation: flipdown 0.5s ease both
  }

  .accordion-opportunity-title
    text-align: left
    font-size: $font-size__body
    line-height: $line-height__body
    font-weight: 300
    letter-spacing: 1px
    display: flex
    justify-content: space-between
    margin: 0
    color: $color__cod-gray

  .accordion-opportunity-title-description
    display: flex
    justify-content: space-between
    font-size: $font-size__h3
    line-height: $line-height__h3
    font-weight: 300
    color: $color__cod-gray

  .accordion-opportunity-description
    font-size: $font-size__body
    line-height: $line-height__body
    text-align: left
    display: block
    position: relative
    overflow: hidden
    max-height: 800px
    opacity: 1
    transform: translate(0, 0)
    margin-top: 14px
    z-index: 2

  .opportunity-url-item
    max-width: 330px
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap
    padding-right: 8px

  .opportunity-total-bytes-item
    display: inline-block
    max-width: 60px
    padding-right: 16px

  ul
    list-style: none
    perspective: 900
    padding: 0
    margin: 0

  ul li
    position: relative
    padding: 0
    margin: 0
    padding-bottom: 4px
    padding-top: 18px

  ul li:nth-of-type(1)
    animation-delay: 0.5s

  ul li:nth-of-type(2)
    animation-delay: 0.75s

  ul li:nth-of-type(3)
    animation-delay: 1s

  ul li:last-of-type
    padding-bottom: 0

  ul li i
    position: absolute
    transform: translate(8px, 0)
    margin-top: 8px
    right: 0

  ul li i:before, ul li i:after
    content: ""
    position: absolute
    background-color: $color__catalina-blue
    width: 3px
    height: 9px

  ul li i:before
    transform: translate(-2px, 0) rotate(45deg)

  ul li i:after
    transform: translate(2px, 0) rotate(-45deg)

  ul li input[type=checkbox]
    position: absolute
    cursor: pointer
    width: 100%
    height: 100%
    z-index: 1
    opacity: 0
    display: block

  ul li input[type=checkbox]:checked ~ span
    margin-top: 0
    max-height: 0
    opacity: 0
    display: none
    transform: translate(0, 50%)

  ul li input[type=checkbox]:checked ~ i:before
    transform: translate(2px, 0) rotate(45deg)

  ul li input[type=checkbox]:checked ~ i:after
    transform: translate(-2px, 0) rotate(-45deg)

  @keyframes flipdown {
    0% {
      opacity: 0
      transform-origin: top center
      transform: rotateX(-90deg)
    }
    5% {
      opacity: 1
    }
    80% {
      transform: rotateX(8deg)
    }
    83% {
      transform: rotateX(6deg)
    }
    92% {
      transform: rotateX(-3deg)
    }
    100% {
      transform-origin: top center
      transform: rotateX(0deg)
    }
  }
