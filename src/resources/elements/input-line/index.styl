.input-line
  width: 100%
  background: none
  border: none
  border-bottom: 1px solid $color__gallery
  display: block
  appearance: none
  border-radius: 0
  outline: none
  line-height: 24px
  padding: 8px 0
  overflow: hidden

  &::placeholder
    color: $color__cod-gray

  &:focus
    border-bottom: 1px solid $color__cornflower-blue
    transition: border .3s

  &.multi-line
    resize: none
    overflow: hidden
    grid-column-end: span 2
