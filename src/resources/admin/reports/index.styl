@require '~style/base'
@require '~style/layout-admin'
@require '~elements/input-line'
@require '~elements/button-round'

.dashboard-reports
  max-width: 1600px
  min-width: 800px
  margin: auto

table
  border-collapse: collapse
  width: 100%

  td
    padding: 16px
    text-align: left
    white-space: nowrap
  tr
    height: 16px

  tr:nth-child(even)
    background-color: #dadada

  th
    background-color: #9e9e9e
    padding: 8px
    overflow: hidden
    text-align: left
    font-size: $font-size__h4
    font-weight: 500

  tr:hover
    background-color:#f5f5f5

  .report-url
    max-width: 200px
    text-overflow: ellipsis
