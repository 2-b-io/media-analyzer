@require '~style/base'
@require '~style/layout-admin'
@require '~elements/input-line'
@require '~elements/button-round'
@require '~elements/pagination'
@require '~elements/header'

.dashboard-reports
  max-width: 1600px
  min-width: 800px
  margin: auto

table
  border-collapse: collapse
  width: 100%

  td
    padding: 16px
    text-align: left
    white-space: nowrap
  tr
    height: 16px

  tr:nth-child(even)
    background-color: #dadada

  th
    background-color: #9e9e9e
    padding: 8px
    overflow: hidden
    text-align: left
    font-size: $font-size__h4
    font-weight: 500

  tr:hover
    background-color:#f5f5f5

  .report-url
    max-width: 200px
    text-overflow: ellipsis

.dashboard-search-content
  min-width: 600px
  max-width: 800px
  margin: auto

  form
    position: relative
    display: grid
    grid-template-columns: 6fr 1fr
    grid-gap: 32px
    padding-bottom: 32px

    .dashboard-search-input
      width: 100%
      padding: 8px 144px 8px 16px
      appearance: none
      outline: none
      border-radius: 40px
      border: none
      color: $color__cod-gray

    .dashboard-search-button
      width: 128px
      height: 40px
      border: none
      background: #074071
      color: $color__white
      cursor: pointer
      border-radius: 40px
      appearance: none
      outline: none

      &:hover
        transition: opacity .3s
        opacity: 0.8
